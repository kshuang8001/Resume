@model ClockInProject.Models.SysUserTable

@{
    Layout = "../Shared/_LayoutLogin.cshtml";
    Page.Title = "忘記密碼";
}

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <p>請填寫以下資料：</p>
            <br />
            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @id = "login-form", style = "display: block;" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", name = "UserID", placeholder = "帳號", tabindex = "1", value = "" })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="color:#ff0000">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <input type="submit" name="Send" id="Send" tabindex="2" class="form-control btn btn-login" value="送出">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>