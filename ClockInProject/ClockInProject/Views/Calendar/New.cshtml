@model ClockInProject.ViewModels.CalendarIndexView

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "行事曆-新增";
}

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">

            @using (Html.BeginForm("New", "Calendar", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(model => model.sysUserCalendar.CalDate, new { @class = "form-control", name = "UserID", tabindex = "1", value = "" })
                    @Html.ValidationMessageFor(model => model.sysUserCalendar.CalDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.sysUserCalendar.MsgTitle, new { @class = "form-control", name = "UserName", tabindex = "2", value = "" })
                    @Html.ValidationMessageFor(model => model.sysUserCalendar.MsgTitle, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.sysUserCalendar.Msg, new { @class = "ckeditor", name = "Msg", tabindex = "2" })
                    @Html.ValidationMessageFor(model => model.sysUserCalendar.Msg, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group" style="color:#ff0000">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <input type="submit" name="register-submit" id="register-submit" tabindex="6" class="form-control btn btn-register" value="註冊">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
